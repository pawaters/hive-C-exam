/* draft for learning purposes
 *
 * dont start dividing! it might be simple enough
 * minus sign: save it for result at the end.
 * ft_atoi: from str to int
 * convert from str to ascii
 * key part: res = res * base + (next char);
 *
 * */

int	ft_atoi_base(const char *str, int str_base)
{
	while (str[i])
	{
		res = res * str_base;
		if (str[i] >= '0' && str[i] <= '9')
			res = res + str[i] - '0';
		else if (str[i] >= A && str[i] <= F)
			res = res + str[i] - 'A' + 10;
		else if (str[i] >= a && str[i] <= f)
			res = res + str[i] - 'a' + 10;
	}	
}
